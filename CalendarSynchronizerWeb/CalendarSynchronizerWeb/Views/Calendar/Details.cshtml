@using CalendarSynchronizerWeb.ViewModels.Calendar
@model CalendarViewModel

<h1>Calendar Details: </h1>
<div class="border border-primary border-4 p-3">
    <div class="m-3 p-1 border-bottom border-secondary border-2">
        <p>CalendarId</p>
        <p> @Model.CalendarId</p>
    </div>
     <div class="m-3 p-1 border-bottom border-secondary border-2" >
        <p>Calendar Summary</p>
        <p> @Model.Summary</p>
    </div>
     <div class="m-3 p-1 border-bottom border-secondary border-2">
        <p>Calendar Description</p>
        <p> @Model.Description</p>
    </div>
     <div class="m-3 p-1 border-bottom border-secondary border-2">
        <p>Calendar Time Zone</p>
        <p> @Model.TimeZone</p>
    </div>
    <a asp-controller="Calendar" asp-action="Index" class="btn btn-danger">Back</a>
</div>
