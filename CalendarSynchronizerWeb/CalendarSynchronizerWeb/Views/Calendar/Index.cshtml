@using Core.Models
@model IEnumerable<CalendarMy>

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">All Calendars List </h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" asp-controller="Calendar" class="btn btn-primary">Create New Calendar</a>
    </div>
</div>
<form asp-controller="Calendar" asp-action="SingleUserIndex" method="get">
    <p>
        Description: <input type="text" name="searchString" />
        <input class="btn btn-secondary" type="submit" value="Search" />
    </p>
</form>
<div class="p-4 border rounded">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                     <a asp-action="Index" asp-route-sortOrder="@ViewData["CalendarIdSortParam"]">@Html.DisplayNameFor(model=>model.CalendarId) CalendarId</a>
                </th>
                <th>
                   <a asp-action="Index" asp-route-sortOrder="@ViewData["SummarySortParam"]">@Html.DisplayNameFor(model=>model.Summary)</a>
                </th>
                <th>
                   <a asp-action="Index" asp-route-sortOrder="@ViewData["DescriptionSortParam"]">@Html.DisplayNameFor(model=>model.Description)</a>
                </th>
                <th>
                    Time Zone
                </th>
                <th>Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.CalendarId
                    </td>
                    <td>
                        @item.Summary
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.TimeZone
                    </td>
                    <td>
                        <div class="text-center">
                            <form asp-action="Delete" asp-route-calendarId="@item.CalendarId">
                                <a asp-action="Edit" asp-route-calendarId="@item.CalendarId" class="btn btn-info text-white">
                                    Edit
                                </a>
                               
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this?')"
                                class="btn btn-danger">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
</div>
