@using Core.Models
@model IEnumerable<CalendarMy>

<br />
<h1>
    Google Calendar Page
</h1>
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">All Calendars List </h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" asp-controller="GoogleCalendar" class="btn btn-primary">Create New Calendar</a>
</    div>
</div>
<div class="p-4 border rounded">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    CalendarId
                </th>
                <th>
                    Summary
                </th>
                <th>
                    Description
                </th>
                <th>
                    Time Zone
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.CalendarId
                    </td>
                    <td>
                        @item.Summary
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.TimeZone
                    </td>
                </tr>
            }
        </table>
    }
</div>



